<!DOCTYPE html>
<html>
<head>
    <title>Reset Password</title>
</head>
<body>
    <h2>Reset Password</h2>

    <div class="row">
        <div class="col-md-4">
            <form method="post" action="/PasswordReset/ResetPassword">
                <!-- Hidden input for the token -->
                <input type="hidden" name="token" value="@ViewData["Token"]" />

                <!-- Display validation summary for any errors -->
                <div class="text-danger" asp-validation-summary="All"></div>

                <!-- Password fields -->
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="New password" required />

                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm password" required />
                </div>

                <!-- Submit button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <!-- Include client-side validation scripts -->
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
