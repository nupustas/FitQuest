@using FitQuest.Models
@model UserData

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/profile.css" />
    <title>User Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <nav>
        <a href="/home/index"> <img src="~/images/words_logo.png"> </a>
        <div class="nav-links" id="navLinks">
            <i class="fa fa-times" onclick="hideMenu()"></i>
            <ul>
                <li><a href="/home/Index">HOME</a></li>
                <li><a href="/home/Fitness">FITNESS</a></li>
                <li><a href="/home/Nutrition">NUTRITION</a></li>
                <li><a href="/home/Recipes">RECIPES</a></li>

                @{
                    var username = Context.Session.GetString("Username");
                    if (!string.IsNullOrEmpty(username))
                    {
                        <!-- Display the user's name if they are logged in -->
                        <li><a href="/Home/Profile" class="user-button">@username.ToUpper()</a></li>
                        <li><a href="/home/Logout">LOGOUT</a></li>
                    }
                    else
                    {
                        <!-- Show "Sign In / Sign Up" if the user is not logged in -->
                        <li><a href="/home/Login" class="user-button">SIGN IN / SIGN UP</a></li>
                    }
                }
            </ul>
        </div>
        <i class="fa fa-bars" onclick="showMenu()"></i>
    </nav>

    <section class="user-profile">
        <div class="profile-container">
            <h2 class="section-title">
                Your<br />
                Information
            </h2>

            <div class="info-box">
                @{
                    var userID = Context.Session.GetInt32("UserId");
                    if (userID == null)
                    {
                        <h1>Log in to view or edit your information</h1>
                    }
                    else
                    {
                        <form method="post" action="/UserProfile/SaveProfile">
                            <div class="form-row">
                                <label>Age:</label>
                                <input type="number" name="Age" min="0" required value="@Model?.Age" />
                            </div>
                            <div class="form-row">
                                <label>Height (cm):</label>
                                <input type="number" name="Height" min="0" required value="@Model?.Height" />
                            </div>
                            <div class="form-row">
                                <label>Weight (kg):</label>
                                <input type="number" name="Weight" min="0" required value="@Model?.Weight" />
                            </div>
                            <div class="form-row">
                                <label>Goals:</label>
                                <select name="Goals" required>
                                    <option value="" @(Model?.Goals == null ? "selected" : "")>Select Goal</option>
                                    <option value="lose weight" @(Model?.Goals == "lose weight" ? "selected" : "")>Lose Weight</option>
                                    <option value="gain weight" @(Model?.Goals == "gain weight" ? "selected" : "")>Gain Weight</option>
                                    <option value="maintain weight" @(Model?.Goals == "maintain weight" ? "selected" : "")>Maintain Weight</option>
                                </select>
                            </div>
                            <div class="form-row">
                                <label>Workout Frequency (days/week):</label>
                                <input type="number" name="WorkoutFrequency" min="0" max="7" required value="@Model?.WorkoutFrequency" />
                            </div>
                            <div class="form-row">
                                <label>Gender:</label>
                                <select name="Gender" required>
                                    <option value="" @(Model?.Gender == null ? "selected" : "")>Select Gender</option>
                                    <option value="Male" @(Model?.Gender == "Male" ? "selected" : "")>Male</option>
                                    <option value="Female" @(Model?.Gender == "Female" ? "selected" : "")>Female</option>
                                </select>
                            </div>
                            <button type="submit">Save</button>
                        </form>
                    }
                }
            </div>
        </div>
    </section>
</body>
</html>
