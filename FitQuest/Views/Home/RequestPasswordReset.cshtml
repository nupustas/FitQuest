<!DOCTYPE html>
@model FitQuest.Models.PasswordResetRequest
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/resetrequest.css">
    <title>Request Password Reset</title>
</head>
<body>
    @{
        ViewData["Title"] = "Request Password Reset";
    }

    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-4">
            <form method="post" action="/PasswordReset/RequestPasswordReset">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email</label>
                    <input type="email" name="Email" class="form-control" required>
                    <span validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send Reset Link</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}